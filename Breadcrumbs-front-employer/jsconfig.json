{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["components/*"],
        "@/pages/*": ["pages/*"],
        "@/utils/*": ["utils/*"],
        "@/Layout*": ["components/Layout/*"],
        "@/constants/*": ["constants/*"],
        "@/styles/*": ["styles/*"]
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }